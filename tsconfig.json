{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "lib": ["es2015"],
      "sourceMap": true,
      "outDir": "./dist",
      "types": ["node"],
      "resolveJsonModule": true,
      "preserveWatchOutput": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "include": [
      "./src/*"
    ],
    "exclude": [
      "./node_modules",
      "./dist"
    ]
  }